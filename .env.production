# Database
DATABASE_URL="postgresql://firelink_user:your_secure_password@postgres:5432/firelink_prod"

# JWT
JWT_SECRET="your-super-secure-jwt-secret-key-change-in-production"

# Redis
REDIS_URL="redis://redis:6379"

# Stripe
STRIPE_SECRET_KEY="sk_live_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# GoCardless
GOCARDLESS_ACCESS_TOKEN="your_gocardless_access_token"
GOCARDLESS_WEBHOOK_SECRET="your_gocardless_webhook_secret"

# Email (SendGrid)
SMTP_HOST="smtp.sendgrid.net"
SMTP_PORT="587"
SMTP_USER="apikey"
SMTP_PASS="your_sendgrid_api_key"

# Twilio (SMS)
TWILIO_ACCOUNT_SID="your_twilio_account_sid"
TWILIO_AUTH_TOKEN="your_twilio_auth_token"
TWILIO_PHONE_NUMBER="+441234567890"

# App
NODE_ENV="production"
PORT=3001
FRONTEND_URL="https://firelinksystem.com"
API_URL="https://api.firelinksystem.com"

# UK VAT
VAT_RATE="0.20"

# Security
CORS_ORIGIN="https://firelinksystem.com"
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
